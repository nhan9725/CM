# Ansible managed
[Unit]
Description=Jenkins JNLP Slave
Wants=network.target
After=network.target

[Service]
EnvironmentFile=/etc/default/jenkins-slave
ExecStart=/usr/bin/java -Xms256m -Xmx512m -jar ${JENKINS_RUN}/agent.jar -jnlpUrl ${JENKINS_URL}/computer/${JENKINS_NODE_NAME}/slave-agent.jnlp -secret=${JENKINS_SECRET}
User=jenkins
Group=jenkins
PermissionsStartOnly=true
Restart=always
LimitNOFILE=8192
RestartSec=10
StartLimitInterval=0

[Install]
WantedBy=multi-user.target
